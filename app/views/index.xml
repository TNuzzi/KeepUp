<Alloy>
    <NavigationWindow id="win1" platform="ios">
        <Window id="win2" title="Step Up Events" class="fb-bar-color">
            <LeftNavButton>
                <Button class="glyphish-magnify" />
            </LeftNavButton>
            <RightNavButton>
                <Button class="btn-drawer-icon" />
            </RightNavButton>
            <View class="n-container h-44 fb-toolbar-bg-color">
                <View class="n-col-6 lo-horizontal" onClick="showMine">
                    <Label class="font-14-helveticaneue-bold color-gray text-center w-100%">MINE</Label>
                    <Label class="small color-success text-center w-100%">2 updates</Label>
                </View>
                <View class="h-100% w-2 vert-line t-0"></View>
                <View class="n-col-6 lo-horizontal" onClick="showLocations">
                    <Label class="font-14-helveticaneue-bold color-gray text-center w-100%">ALL</Label>
                    <Label class="small color-success text-center w-100%">2 updates</Label>
                </View>
            </View>
            <ScrollView class="h-fill w-fill">
                <View class="w-95% h-size t-10 rounded-border-4 bg-white">
                    <View class="container t-10">
                        <View class="col-1">
                            <ImageView class="glyphish-question" />
                            <Label>what</Label>
                        </View>
                        <View class="h-50 w-2 vert-line t-0"></View>
                        <View class="col-3">
                            <Label>adfs</Label>
                        </View>
                        <View class="col-1">
                            <ImageView class="glyphish-clock-1" />
                            <Label>when</Label>
                        </View>
                        <View class="h-50 w-2 vert-line t-0"></View>
                        <View class="col-3">
                            <Label>adfs</Label>
                        </View>
                        <View class="col-1">
                            <ImageView class="glyphish-map-location" />
                            <Label>where</Label>
                        </View>
                        <View class="h-50 w-2 vert-line t-0"></View>
                        <View class="col-3">
                            <Label>adfs</Label>
                        </View>
                    </View>
                    <View class="n-container h-44 fb-toolbar-bg-color">
                        <View class="n-col-6 lo-horizontal" onClick="showMine">
                            <ImageView class="glyphish-map-1 h-20 w-20 l-15" />
                            <Label class="font-14-helveticaneue-bold color-gray text-center l-10 w-60%">DIRECTIONS</Label>
                        </View>
                        <View class="h-100% w-2 vert-line t-0"></View>
                        <View class="n-col-6 lo-horizontal" onClick="showLocations">
                            <ImageView class="glyphish-heart-1 h-20 w-20 l-40" />
                            <Label class="font-14-helveticaneue-bold color-gray text-left l-10 w-30%">SAVE</Label>
                        </View>
                    </View>
                </View>
            </ScrollView>
        </Window>
    </NavigationWindow>
</Alloy>